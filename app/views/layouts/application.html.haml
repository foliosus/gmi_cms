!!!
%html{:lang => Globalize.locale || 'en'}
  %head
    %meta{:charset => 'utf-8'}
    %meta{:'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}
    %title= [@title || @page.try(:menu_title) || @page.try(:title), 'Greenville Montessori Institute, South Carolina'].join(' :: ')
    
    %meta{:name => 'viewport', :content => 'width=device-width', :'initial-scale' => 1}
    
    = stylesheet_link_tag '1140', 'application', :media => 'all'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Cabin:400,600,400italic,600italic', :media => 'all'
    
    = javascript_include_tag 'application', 'css3-mediaqueries.js'
  	
    = csrf_meta_tags
    
    /[if lt IE 9]
      / This script enables structural HTML5 elements in old IE. http://code.google.com/p/html5shim/
      %script{:src => 'http:///html5shim.googlecode.com/svn/trunk/html5.js'}
      = stylesheet_link_tag 'ie', :media => 'all'
  
  
  %body{:lang => Globalize.locale || 'en'}
    .container
      %header#page_header
        %h1#branding
          = link_to image_tag('gmi_logo.png', :width => 200, :height => 80, :alt => 'Greenville Montessori Institute'), root_path
        #language_switcher
          - if Globalize.locale == :en
            = link_to 'EspaÃ±ol', {:locale => :es}
          - else
            = link_to 'English', {:locale => :en}
      .row
        = yield
