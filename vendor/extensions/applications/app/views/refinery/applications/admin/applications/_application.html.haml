%li.clearfix.record{:class => cycle("on", "on-hover"), :id => dom_id(application)}
  %span.title #{application.full_name} (#{application.state})
  %span.actions
    = link_to refinery_icon_tag("application_go.png"), refinery.applications_application_path(application),
      :title => t('.view_live_html'),
      :target => "_blank"
    
    = link_to refinery_icon_tag("application_edit.png"), refinery.edit_applications_admin_application_path(application),
      :title => t('.edit')
    = link_to refinery_icon_tag("delete.png"), refinery.applications_admin_application_path(application),
      :class => "cancel confirm-delete",
      :title => t('.delete'),
      :confirm => t('message', :scope => 'refinery.admin.delete', :title => application.first_name),
      :method => :delete
